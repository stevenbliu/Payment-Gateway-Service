datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Transaction {
  id             String   @id @default(uuid())
  amount         Int
  currency       String
  clientSecret   String
  status         String   // 'succeeded' or 'failed'
  errorMessage   String?  // optional error message for failed transactions
  createdAt      DateTime @default(now())
}

